<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.4" method="upgrade">
	<name>JJ Ujumbe</name>
	<creationDate>27 Nov 2015</creationDate>
	<author>JoomJunk</author>
	<copyright>Copyright (C) 2011 - 2015 JoomJunk</copyright> 
	<license>http://www.gnu.org/licenses/gpl-3.0.html</license> 
	<authorEmail>admin@joomjunk.co.uk</authorEmail>
	<authorUrl>http://joomjunk.co.uk</authorUrl>
	<version>1.0.0</version>
	<description>JJ Ujumbe is a private messaging component for Joomla, forked from uddeIM Instant Messages by Stephan Slabihoud</description>
	<files folder="site">
		<folder>views</folder>
		<folder>js</folder>
		<folder>templates</folder>
		<filename>archive.php</filename>
		<filename>bbparser.php</filename>
		<filename>captcha.php</filename>
		<filename>captcha15.php</filename>
		<filename>cb_extra.php</filename>
		<filename>crypt.class.php</filename>
		<filename>getpiclink.php</filename>
		<filename>inbox.php</filename>
		<filename>includes.db.php</filename>
		<filename>includes.php</filename>
		<filename>index.html</filename>
		<filename>json.php</filename>
		<filename>monofont.ttf</filename>
		<filename>outbox.php</filename>
		<filename>recaptchalib.php</filename>
		<filename>trashcan.php</filename>
		<filename>ujumbe.api.php</filename>
		<filename>ujumbe.php</filename>
		<filename>ujumbe_igoogle.xml</filename>
		<filename>ujumbelib.php</filename>
		<filename>userlists.php</filename>
	</files>
	
	<scriptfile>script.php</scriptfile>
	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates</schemapath>
		</schemas>
	</update>
	
	<administration>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_ujumbe.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_ujumbe.sys.ini</language>
		</languages>	
		<menu img="../components/com_ujumbe/templates/images/ujumbe-favicon.png">COM_UDDEIM_MENU</menu>	
		<files folder="admin">
			<folder>sql</folder>
			<folder>language</folder>
			<folder>language.utf8</folder>
			<filename>access.xml</filename>
			<filename>ujumbe.php</filename>
			<filename>admin.includes.php</filename>
			<filename>admin.shared.php</filename>
			<filename>admin.ujumbe.php</filename>
			<filename>admin.ujumbelib.php</filename>
			<filename>admin.usersettings.php</filename>
			<filename>config.class.php</filename>
			<filename>config.xml</filename>
			<filename>index.html</filename>
			<filename>toolbar.ujumbe.php</filename>
		</files>		
	</administration>
	
</extension>
